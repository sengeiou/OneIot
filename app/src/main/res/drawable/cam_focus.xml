<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="15dp"
        android:top="15dp"
        android:right="15dp"
        android:left="15dp">
        <shape
            android:shape="oval">
            <solid android:color="#22ffffff" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#22ffffff" />
            <stroke
                android:width="0.3dp"
                android:color="@android:color/white" />
            <corners android:radius="6dp"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
</layer-list>
