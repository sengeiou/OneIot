<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/click_ripple_bg"
                android:clickable="true">

    <FrameLayout
        android:id="@+id/fl_num_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_num_left"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="100"
            android:textSize="@dimen/text_medium"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="gone"
            />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_avat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fl_num_left"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avat_left_big"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/profile_men"
            android:visibility="gone"
            app:civ_border_color="@color/color_F4F4F4"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_fill_color="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avat_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/profile_men"
            android:visibility="gone"
            app:civ_border_color="@color/color_F4F4F4"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_fill_color="@color/white"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fl_avat_left"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/title"
            android:textSize="@dimen/text_medium_less"
            tools:text="titlejjjjjjjjjjjjjjjjjjjjzxcfzxczxczxcjjj"/>

        <TextView
            android:id="@+id/text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="13"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/tips"
            tools:text="tips"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/image"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/profile_men"
            android:visibility="gone"
            app:civ_border_color="@color/color_F4F4F4"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_fill_color="@color/white"/>

        <ImageView
            android:id="@+id/iv_avat_right2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_edit_gray_bkg"
            android:elevation="0dp"
            android:padding="7dp"
            android:src="@drawable/ic_profile_following_gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxEms="5"
            android:singleLine="true"
            android:textColor="#a0a0a0"
            tools:text="statusghjgjgjgjgj"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingLeft="2dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/iv_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        <RelativeLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="0ddd"/>

            <com.like.LikeButton
                android:id="@+id/lb_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_likes"
                android:layout_marginTop="-10dp"
                android:visibility="gone"
                app:circle_end_color="@android:color/holo_red_dark"
                app:circle_start_color="@android:color/holo_orange_dark"
                app:dots_primary_color="@android:color/holo_red_light"
                app:dots_secondary_color="@android:color/holo_red_dark"
                app:icon_size="15dp"
                app:like_drawable="@drawable/heart_on"
                app:unlike_drawable="@drawable/heart_off"/>
        </RelativeLayout>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:visibility="gone"/>
    </FrameLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@color/dividing_line"
        android:visibility="visible"/>

</RelativeLayout>