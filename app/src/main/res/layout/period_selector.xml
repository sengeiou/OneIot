<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/period_layout_bkg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/period_day"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/period_selector_bkg"
        android:gravity="center"
        android:text="@string/day"
        android:textColor="@color/period_selector_text_color"
        android:textSize="@dimen/font_14"/>

    <TextView
        android:id="@+id/period_week"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/period_selector_bkg"
        android:gravity="center"
        android:text="@string/week"
        android:textColor="@color/period_selector_text_color"
        android:textSize="@dimen/font_14"/>

    <TextView
        android:id="@+id/period_month"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/period_selector_bkg"
        android:gravity="center"
        android:text="@string/month"
        android:textColor="@color/period_selector_text_color"
        android:textSize="@dimen/font_14"/>

</LinearLayout>