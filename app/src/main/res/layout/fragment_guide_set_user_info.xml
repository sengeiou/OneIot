<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:fitsSystemWindows="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              tools:context="com.coband.cocoband.guide.fragment.SetUserInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="@string/user_profile"
                android:textColor="@color/color_242424"
                android:textSize="24sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/why_ask_info"
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/why_ask_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_help"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="36.7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nick_name_edit"
                    android:gravity="center"
                    android:text="@string/nickname_short"
                    android:textColor="@color/color_242424"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/nick_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="end"
                    android:textSize="14sp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/sex_edit"
                    android:gravity="center"
                    android:text="@string/sex"
                    android:textColor="@color/color_242424"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/sex_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:editable="false"
                    android:gravity="end"
                    android:textSize="14sp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/birth_edit"
                    android:gravity="center"
                    android:text="@string/birthday"
                    android:textColor="@color/color_242424"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/birth_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:editable="false"
                    android:gravity="end"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/height_edit"
                    android:gravity="center"
                    android:text="@string/height"
                    android:textColor="@color/color_242424"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/height_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:editable="false"
                    android:gravity="end"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/weight_edit"
                    android:gravity="center"
                    android:text="@string/weight"
                    android:textColor="@color/color_242424"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/weight_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:editable="false"
                    android:gravity="end"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <Button
                android:id="@+id/user_profile_save_btn"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_button"
                android:text="@string/save"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
