<?xml version="1.0" encoding="utf-8"?>
<com.coband.cocoband.widget.widget.EnabledRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_modify_device_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <TextView
        style="@style/device_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify_band_name"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrow_more"
        android:gravity="center_vertical|end"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/color_a0a0a0"/>
</com.coband.cocoband.widget.widget.EnabledRelativeLayout>