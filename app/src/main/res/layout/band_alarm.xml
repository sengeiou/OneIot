<?xml version="1.0" encoding="utf-8"?>
<com.coband.cocoband.widget.widget.EnabledRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_band_alarm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/text_band_alarm_title"
        style="@style/device_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/band_alarm_remind"/>


    <TextView
        android:id="@+id/text_band_alarm_status"
        style="@style/device_settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrow_more"
        android:gravity="center_vertical"
        android:text="@string/band_alarm_off"/>


</com.coband.cocoband.widget.widget.EnabledRelativeLayout>