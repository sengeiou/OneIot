<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:orientation="vertical">

    <View
        android:id="@+id/view_time_line"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/card_line" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/image_card_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                tools:src="@drawable/ibd_card_step_nor" />

            <TextView
                android:id="@+id/text_card_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="@color/card_title"
                tools:text="@string/step" />

            <TextView
                android:id="@+id/text_card_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:textColor="@color/card_title"
                tools:text="12:03" />
        </FrameLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="@color/card_line" />

        <TextView
            android:id="@+id/text_card_message"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="41dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="@color/card_message"
            tools:text="@string/card_sport_uncomplete_step" />

        <ImageView
            android:id="@+id/image_achievement_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/walker" />


    </android.support.v7.widget.CardView>


</LinearLayout>