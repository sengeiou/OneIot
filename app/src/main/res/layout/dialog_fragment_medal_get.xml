<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@drawable/corner_dialog_fragment_root_layout_transparent">

    <FrameLayout
        android:id="@+id/dialog_fragment_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:background="@drawable/corner_dialog_fragment_root_layout">

            <ImageView
                android:id="@+id/dialog_medal_img"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/dialog_medal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/dialog_medal_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/dialog_medal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a0a0a0"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/dialog_medal_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="30.3dp"
                android:lineSpacingExtra="3dp"/>

            <TextView
                android:id="@+id/dialog_medal_ok"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/corner_dialog_fragment_bottom"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="#242424"
                android:textSize="16sp" />

        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>