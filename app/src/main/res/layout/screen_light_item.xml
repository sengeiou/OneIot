<?xml version="1.0" encoding="utf-8"?>
<com.coband.cocoband.widget.widget.EnabledRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                         android:id="@+id/relative_screen_light"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:background="?android:selectableItemBackground"
                                                         android:clickable="true"
                                                         android:paddingBottom="16dp"
                                                         android:paddingRight="16dp"
                                                         android:paddingTop="16dp">


    <TextView
        android:id="@+id/text_screen_light_remind"
        style="@style/device_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/tilt_watch_light_screen" />

    <TextView
        android:id="@+id/text_screen_light_status"
        style="@style/device_settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrow_more"
        android:gravity="center_vertical"
        android:text="@string/close" />
</com.coband.cocoband.widget.widget.EnabledRelativeLayout>