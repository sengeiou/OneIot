<?xml version="1.0" encoding="utf-8"?>
<com.coband.cocoband.widget.widget.EnabledRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_jiuzuo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <TextView
        android:id="@+id/text_jiuzuo_title"
        style="@style/device_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jiuzuo_remind"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_jiuzuo_title"
        android:text="@string/sedentary_tips"
        android:textColor="@color/color_a0a0a0"/>

    <TextView
        android:id="@+id/text_jiuzuo_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrow_more"
        android:gravity="center_vertical"
        tools:text="未开启"/>
</com.coband.cocoband.widget.widget.EnabledRelativeLayout>